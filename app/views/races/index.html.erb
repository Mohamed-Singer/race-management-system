<h1 class="mb-4">All Races</h1>
<div class="mb-3">
  <%= link_to "Create New Race", new_race_path, class: "btn btn-primary" %>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Race Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @races.each do |race| %>
      <tr>
        <td><%= race.name %></td>
        <td>
          <%= link_to "Show", race_path(race), class: "btn btn-info btn-sm" %>
          <%= link_to "Edit", edit_race_path(race), class: "btn btn-warning btn-sm" %>
          <%=  button_to "Delete", race_path(race), method: :delete, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
