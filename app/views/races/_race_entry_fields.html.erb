<div class="nested-fields border p-3 mb-2">
  <div class="form-group">
    <%= f.label :student_name, "Student Name" %>
    <%= f.text_field :student_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :lane, "Lane" %>
    <%= f.number_field :lane, class: "form-control" %>
  </div>
  <%# Only allow removal if this is not one of the first two mandatory entries.
      For dynamically added fields (child_index "NEW_RECORD"), index will be nil, so show Remove. %>
  <% if index.nil? || index.to_s == "NEW_RECORD" || index.to_i >= 2 %>
    <%= link_to "Remove", "#", class: "remove_fields btn btn-danger btn-sm mt-2" %>
  <% end %>
</div>
